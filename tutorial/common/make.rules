include ../common/tools.mk

BUILD_FOLDER=../build
TEMP_FOLDER=$(BUILD_FOLDER)/$(ROM_NAME)
BIN_NAME=$(ROM_NAME).bin

ASM_OBJECTS=$(ASM_SOURCES:%.s=$(TEMP_FOLDER)/%.o)

# Compile assembler sources
$(TEMP_FOLDER)/%.o: %.s
	@$(MKDIR_BINARY) $(MKDIR_FLAGS) $(TEMP_FOLDER)
	$(CA65_BINARY) $(CA65_FLAGS) -o $@ -l $(@:.o=.lst) $<

# Link ROM image
$(BUILD_FOLDER)/$(BIN_NAME): $(ASM_OBJECTS) $(FIRMWARE_CFG)
	@$(MKDIR_BINARY) $(MKDIR_FLAGS) $(BUILD_FOLDER)
	$(LD65_BINARY) $(LD65_FLAGS) -C $(FIRMWARE_CFG) -o $@ $(ASM_OBJECTS)

# Default target
all: $(BUILD_FOLDER)/$(BIN_NAME)

# Build and dump output
test: $(BUILD_FOLDER)/$(BIN_NAME)
	$(HEXDUMP_BINARY) $(HEXDUMP_FLAGS) $<

# Clean build artifacts
clean:
	$(RM_BINARY) -f $(BUILD_FOLDER)/$(BIN_NAME) \
	$(ASM_OBJECTS) \
	$(ASM_OBJECTS:%.o=%.lst) 
