{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "group": "build",
      "label": "Build All",
      "type": "shell",
      "command": "make all",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Test All",
      "type": "shell",
      "command": "make test",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Clean All",
      "type": "shell",
      "command": "make clean",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Build single project",
      "type": "shell",
      "command": "make -C ${input:projectID} all",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Test single project",
      "type": "shell",
      "command": "make -C ${input:projectID} test",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Clean single project",
      "type": "shell",
      "command": "make -C ${input:projectID} clean",
      "problemMatcher": []
    }
  ],
  "inputs" : [
    {
      "id": "projectID",
      "type": "pickString",
      "description": "Single project name",
      "options": [
        "01_blink_vasm",
        "02_blink",
        "03_blink"
      ],
      "default": "01_blink_vasm"
    }
  ]
}