{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "group": "build",
      "label": "Build All",
      "type": "shell",
      "command": "docker run --rm -v${workspaceFolder}:/mnt/project dawidbuchwald/cc65-tools-make all",
      "problemMatcher": [ "$gcc" ]
    },
    {
      "group": "build",
      "label": "Test All",
      "type": "shell",
      "command": "docker run --rm -v${workspaceFolder}:/mnt/project dawidbuchwald/cc65-tools-make test",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Clean All",
      "type": "shell",
      "command": "docker run --rm -v${workspaceFolder}:/mnt/project dawidbuchwald/cc65-tools-make clean",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Build single (script)",
      "type": "shell",
      "command": "docker run --rm -v${workspaceFolder}:/mnt/project dawidbuchwald/cc65-tools-base ./${input:scriptProjectID}/build.sh",
      "problemMatcher": [ "$gcc" ]
    },
    {
      "group": "build",
      "label": "Test single (script)",
      "type": "shell",
      "command": "docker run --rm -v${workspaceFolder}:/mnt/project dawidbuchwald/cc65-tools-base ./${input:scriptProjectID}/test.sh",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Clean single (script)",
      "type": "shell",
      "command": "docker run --rm -v${workspaceFolder}:/mnt/project dawidbuchwald/cc65-tools-base ./${input:scriptProjectID}/clean.sh",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Build single (make)",
      "type": "shell",
      "command": "docker run --rm -v${workspaceFolder}:/mnt/project dawidbuchwald/cc65-tools-make -C ${input:makeProjectID} all",
      "problemMatcher": [ "$gcc" ]
    },
    {
      "group": "build",
      "label": "Test single (make)",
      "type": "shell",
      "command": "docker run --rm -v${workspaceFolder}:/mnt/project dawidbuchwald/cc65-tools-make -C ${input:makeProjectID} test",
      "problemMatcher": []
    },
    {
      "group": "build",
      "label": "Clean single (make)",
      "type": "shell",
      "command": "docker run --rm -v${workspaceFolder}:/mnt/project dawidbuchwald/cc65-tools-make -C ${input:makeProjectID} clean",
      "problemMatcher": []
    }
  ],
  "inputs" : [
    {
      "id": "makeProjectID",
      "type": "pickString",
      "description": "Single project folder name",
      "options": [
        "02_nop_fill",
        "03_nop_fill",
        "04_reset"
      ],
      "default": "02_nop_fill"
    },
    {
      "id": "scriptProjectID",
      "type": "pickString",
      "description": "Single project folder name",
      "options": [
        "01_nop_fill"
      ],
      "default": "01_nop_fill"
    }    
  ]
}